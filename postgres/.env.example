#######################################################################
### PostgreSQL credentials ############################################
#######################################################################

# Required: Username for the PostgreSQL admin user
POSTGRES_USER=postgres

# Required: Password for the PostgreSQL admin user (use a strong password)
POSTGRES_PASSWORD= #password

#######################################################################
### PostgreSQL configuration ##########################################
#######################################################################

# Required: Host directory where PostgreSQL data will be stored
POSTGRES_DATA_LOCATION= #/mnt/data/postgres

# Optional: Host port to expose PostgreSQL (default: 5432)
# POSTGRES_PORT=5432

#######################################################################
### pgAdmin configuration #############################################
#######################################################################

# Required: Email address used to log into pgAdmin web interface
PGADMIN_DEFAULT_EMAIL= #admin@example.com

# Required: Password for the pgAdmin login (use a strong password)
PGADMIN_DEFAULT_PASSWORD= #password

# Required: Host directory where pgAdmin data will be stored
PGADMIN_DATA_LOCATION= #/mnt/data/pgadmin

# Optional: Host port to expose pgAdmin web interface (default: 5050)
# PGADMIN_PORT=5050

# Optional: Domain name for pgAdmin when using Traefik (default: localhost)
# PGADMIN_DOMAIN=pgadmin.example.com

#######################################################################
### Traefik configuration ############################################
#######################################################################

# Optional: Set to any value (e.g., 'true') to enable Traefik integration for pgAdmin
# When enabled, pgAdmin will be accessible via PGADMIN_DOMAIN
# When disabled or not set, pgAdmin will only be accessible via PGADMIN_PORT
# USE_TRAEFIK=true